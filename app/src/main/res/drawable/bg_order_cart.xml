<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="3dp"
        android:left="2dp"
        android:right="2dp">
        <shape>
            <solid android:color="#15000000" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    <item android:bottom="3dp">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#FFFFFF"
                android:startColor="#F9FFFE" />
            <corners android:radius="18dp" />
            <stroke
                android:width="1dp"
                android:color="@color/primary_light_premium" />
        </shape>
    </item>
</layer-list>