<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#222222"
    android:layout_margin="8dp">

    <!-- Nama Reviewer & Rating -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvReviewerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nama Reviewer"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/rbReviewRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4"
            android:isIndicator="true"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:transformPivotX="0dp" />
    </LinearLayout>

    <!-- Comment -->
    <TextView
        android:id="@+id/tvReviewComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Komentar review produk di sini"
        android:textColor="#CCCCCC"
        android:textSize="12sp"
        android:layout_marginTop="6dp" />

    <!-- Date -->
    <TextView
        android:id="@+id/tvReviewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-01-01"
        android:textColor="#888888"
        android:textSize="11sp"
        android:layout_marginTop="4dp" />

</LinearLayout>