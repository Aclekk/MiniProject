<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EditProductFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Produk"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <EditText
                android:id="@+id/etNamaProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Produk"
                android:inputType="textCapWords"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etHargaProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga Produk"
                android:inputType="numberDecimal"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etDeskripsiProduk"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Deskripsi Produk"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etStokProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jumlah Stok"
                android:inputType="number"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnSimpanPerubahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan Perubahan"/>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>