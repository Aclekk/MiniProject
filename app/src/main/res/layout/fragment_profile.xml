<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_premium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <!-- 🌿 HEADER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/gradient_profile_header"
            android:clipChildren="false"
            android:paddingBottom="60dp">

            <!-- 📸 FOTO PROFIL (klik langsung untuk ganti PP) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProfile"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                app:cardCornerRadius="70dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/white"
                app:strokeWidth="4dp">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Foto Profil"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person" />

                <!-- Overlay klik transparan -->
                <View
                    android:id="@+id/btnTakePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Label kecil di bawah foto -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📷 Ketuk foto untuk mengganti profil"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/cardProfile"
                android:layout_marginTop="12dp"
                android:alpha="0.9" />
        </RelativeLayout>

        <!-- 🌾 KONTEN PROFIL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="-40dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="6dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="28dp">

                    <!-- Judul -->
                    <TextView
                        android:id="@+id/tvSectionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📋 Informasi Profil"
                        android:textColor="@color/primary_green_premium"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Input Fields -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Lengkap / Toko"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxStrokeColor="@color/primary_green_premium">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Kontak / Email"
                        app:boxStrokeColor="@color/primary_green_premium">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Alamat"
                        app:boxStrokeColor="@color/primary_green_premium">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Tentang Kami -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Tentang Kami / Bio"
                        app:boxStrokeColor="@color/primary_green_premium">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAbout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:textColor="@color/text_primary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 🔘 BUTTON SECTION -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveProfile"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:text="💾 Simpan Profil"
                            app:cornerRadius="16dp"
                            app:backgroundTint="@color/primary_green_premium"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSalesReport"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:text="📊 Laporan Penjualan"
                            android:layout_marginTop="12dp"
                            android:visibility="gone"
                            app:backgroundTint="@color/teal_700"
                            app:cornerRadius="16dp"
                            android:textColor="@android:color/white" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewReviews"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:text="⭐ Lihat Ulasan Pembeli"
                            android:layout_marginTop="12dp"
                            app:backgroundTint="@color/primary_green_premium"
                            android:textColor="@android:color/white"
                            android:visibility="gone" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSendNotification"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:text="📢 Kirim Notifikasi"
                            android:layout_marginTop="12dp"
                            app:backgroundTint="@color/teal_700"
                            android:textColor="@android:color/white"
                            android:visibility="gone" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewNotifications"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:text="🔔 Lihat Notifikasi"
                            android:layout_marginTop="12dp"
                            app:backgroundTint="@color/primary_green_premium"
                            android:textColor="@android:color/white"
                            android:visibility="gone" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnLogout"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:text="🚪 Keluar"
                            android:textColor="@color/error_red"
                            app:backgroundTint="@color/white"
                            app:cornerRadius="16dp"
                            android:layout_marginTop="16dp"
                            android:elevation="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
