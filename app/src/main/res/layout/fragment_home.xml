<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <!-- Content Lama (LinearLayout dengan header, search, recyclerview) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7F5"
        android:orientation="vertical">

        <!-- 🌾 HEADER BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient"
            android:elevation="6dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="28dp"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.02"
                android:text="🛒 Katalog Produk"
                android:textColor="@color/primary_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:text="Temukan semua kebutuhan pertanian Anda"
                android:textColor="@color/primary_green"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- 🔍 SEARCH & FILTER BAR dengan VISUAL SEARCH -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="-28dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/etSearchHome"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="12dp"
                    android:drawableTint="#5C8A3C"
                    android:hint="Cari nama, kategori, atau deskripsi..."
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    android:textColor="#2D5016"
                    android:textColorHint="#B0B0B0"
                    android:textSize="14sp" />

                <!-- 🆕 VISUAL SEARCH BUTTON (CAMERA ICON) - ENHANCED -->
                <ImageButton
                    android:id="@+id/btnVisualSearch"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_camera_button"
                    android:contentDescription="Cari dengan Foto"
                    android:padding="10dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="#E0E0E0" />

                <Button
                    android:id="@+id/btnFilterHome"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:backgroundTint="#5C8A3C"
                    android:drawableStart="@android:drawable/ic_menu_sort_by_size"
                    android:drawablePadding="8dp"
                    android:drawableTint="#FFFFFF"
                    android:paddingHorizontal="24dp"
                    android:text="Filter"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 🛍️ PRODUCTS GRID -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHomeProducts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2" />

    </LinearLayout>

    <!-- ➕ FAB ADD PRODUCT (Hanya untuk Admin) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:contentDescription="Tambah Produk"
        android:src="@android:drawable/ic_input_add"
        android:visibility="gone"
        app:backgroundTint="#5C8A3C"
        app:tint="#FFFFFF" />

</FrameLayout>