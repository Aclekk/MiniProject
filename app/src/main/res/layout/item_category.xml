<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="#FFFFFF"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    app:strokeColor="#E6E6E6"
    app:strokeWidth="1dp">

    <!-- Container utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="?attr/selectableItemBackground">

        <!-- Baris utama: TEXT kiri, ICON kanan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- LEFT: text area -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Nama kategori -->
                <TextView
                    android:id="@+id/tvCategoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Alat Tani" />

                <!-- Badge count (kalau nanti dipakai) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#F3F3F3">

                    <TextView
                        android:id="@+id/tvProductCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textColor="#666666"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        tools:text="24 items" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- RIGHT: icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:cardBackgroundColor="@color/primary_green"
                app:cardCornerRadius="26dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/ivCategoryIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:contentDescription="Category Icon"
                    app:tint="#FFFFFF"
                    tools:src="@drawable/ic_category" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Admin/Seller Buttons (seller saja) -->
        <!-- NOTE: Container ini JANGAN "gone", karena adapter kamu hanya set visibility tombolnya -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditCategory"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#5C8A3C"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone"
                app:cornerRadius="10dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconSize="16dp"
                app:iconTint="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteCategory"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Hapus"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:backgroundTint="#E53935"
                android:textColor="@android:color/white"
                android:visibility="gone"
                app:cornerRadius="10dp"
                app:icon="@android:drawable/ic_delete"
                app:iconSize="16dp"
                app:iconTint="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
