<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7F5"
    tools:context=".fragment.ProductsFragment">

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="#5C8A3C"
        android:visibility="gone" />

    <!-- Main Content -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ðŸŒ¾ HEADER SECTION WITH STORE INFO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_header_gradient"
                    android:padding="20dp"
                    android:elevation="4dp">

                    <!-- Row: Logo + Nama Toko -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Logo Toko -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/white"
                            app:strokeWidth="2dp"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:id="@+id/imgStoreLogo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_person"
                                android:contentDescription="Logo Toko" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Nama Toko -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvStoreName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ¾ Niaga Tani"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_dark"
                                android:letterSpacing="0.02" />

                            <TextView
                                android:id="@+id/tvStoreTagline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Solusi Pertanian Modern Indonesia"
                                android:textSize="14sp"
                                android:textColor="@color/primary_green"
                                android:layout_marginTop="4dp"
                                android:fontFamily="sans-serif-light" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- ðŸ” SEARCH & FILTER BAR -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="Cari produk pertanian..."
                            android:paddingStart="16dp"
                            android:paddingEnd="12dp"
                            android:background="@android:color/transparent"
                            android:drawableStart="@android:drawable/ic_menu_search"
                            android:drawableTint="#5C8A3C"
                            android:drawablePadding="12dp"
                            android:textColorHint="#B0B0B0"
                            android:textColor="#2D5016"
                            android:inputType="text"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="32dp"
                            android:background="#E0E0E0" />

                        <Button
                            android:id="@+id/btnFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Filter"
                            android:textAllCaps="false"
                            android:backgroundTint="#5C8A3C"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="24dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:drawableStart="@android:drawable/ic_menu_sort_by_size"
                            android:drawableTint="#FFFFFF"
                            android:drawablePadding="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ðŸŽ  PROMO CAROUSEL SECTION -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tvPromoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promo Spesial"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2D5016"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="6dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPagerPromo"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:clipToOutline="true" />
                    </androidx.cardview.widget.CardView>

                    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                        android:id="@+id/dotsIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        app:dotsColor="#D0D0D0"
                        app:dotsSize="10dp"
                        app:dotsSpacing="8dp"
                        app:selectedDotColor="#5C8A3C" />
                </LinearLayout>

                <!-- ðŸ“‚ KATEGORI SECTION -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="16dp"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kategori Produk"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2D5016"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:clipToPadding="false"
                        android:paddingHorizontal="4dp" />
                </LinearLayout>

                <!-- ðŸ† PRODUK TERLARIS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="24dp"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="5dp"
                            android:layout_height="28dp"
                            android:background="@drawable/bg_accent_bar"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Produk Terlaris"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#2D5016" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="8dp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2" />
                </LinearLayout>

                <!-- ðŸ“ FOOTER (Tanpa logo / foto) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="24dp"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="90dp">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="4dp"
                        android:background="@drawable/bg_accent_bar"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“– Tentang Kami"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2D5016"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvAboutTagline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solusi Pertanian Modern Indonesia" />

                    <TextView
                        android:id="@+id/tvAboutAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Jl. Pertanian Sejahtera No. 123, Jakarta Selatan" />

                    <TextView
                        android:id="@+id/tvAboutPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ž +62 812-3456-7890" />

                    <TextView
                        android:id="@+id/tvAboutEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“§ support@agrishop.com" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â© 2025 Niaga Tani. All rights reserved."
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- ðŸŽ¯ FAB Admin -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="#FFFFFF"
        app:backgroundTint="#5C8A3C"
        app:elevation="12dp"
        app:pressedTranslationZ="16dp"
        android:visibility="gone" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
