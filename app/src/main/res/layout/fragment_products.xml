<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient"
    tools:context=".fragment.ProductsFragment">

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:indeterminateTint="#5C8A3C"
        android:visibility="gone"
        android:elevation="20dp" />

    <!-- Main Content -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ðŸŒŸ PREMIUM HEADER SECTION -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="12dp"
                    android:backgroundTint="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_glass_card"
                        android:padding="24dp">

                        <!-- Logo + Store Info Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Premium Logo Container -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                app:cardCornerRadius="36dp"
                                app:cardElevation="8dp"
                                app:strokeColor="#FFFFFF"
                                app:strokeWidth="3dp">

                                <ImageView
                                    android:id="@+id/imgStoreLogo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_person"
                                    android:contentDescription="Logo Toko" />
                            </androidx.cardview.widget.CardView>

                            <!-- Store Name & Tagline -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">

                                <TextView
                                    android:id="@+id/tvStoreName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸŒ¾ Niaga Tani"
                                    android:textSize="26sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A1A1A"
                                    android:fontFamily="sans-serif-black"
                                    android:letterSpacing="-0.01" />

                                <TextView
                                    android:id="@+id/tvStoreTagline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Solusi Pertanian Modern"
                                    android:textSize="13sp"
                                    android:textColor="#666666"
                                    android:layout_marginTop="4dp"
                                    android:fontFamily="sans-serif-light" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ðŸ” PREMIUM SEARCH BAR -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:hint="Cari produk pertanian..."
                            android:paddingStart="20dp"
                            android:paddingEnd="16dp"
                            android:background="@android:color/transparent"
                            android:drawableStart="@android:drawable/ic_menu_search"
                            android:drawableTint="#5C8A3C"
                            android:drawablePadding="14dp"
                            android:textColorHint="#AAAAAA"
                            android:textColor="#1A1A1A"
                            android:inputType="text"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:text="Filter"
                            android:textAllCaps="false"
                            app:cornerRadius="16dp"
                            android:backgroundTint="#5C8A3C"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="20dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:drawableStart="@android:drawable/ic_menu_sort_by_size"
                            android:drawableTint="#FFFFFF"
                            android:drawablePadding="8dp"
                            app:elevation="0dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ðŸŽ  PREMIUM PROMO CAROUSEL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="24dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="10dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="220dp">

                            <androidx.viewpager2.widget.ViewPager2
                                android:id="@+id/viewPagerPromo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipToOutline="true" />

                            <!-- Gradient Overlay Bottom -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/gradient_overlay_bottom" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                        android:id="@+id/dotsIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        app:dotsColor="#D0D0D0"
                        app:dotsSize="10dp"
                        app:dotsSpacing="6dp"
                        app:dotsWidthFactor="2.5"
                        app:selectedDotColor="#5C8A3C" />

                    <!-- Promo Buttons (Seller Only) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddPromo"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="+ Tambah Promo"
                            android:textAllCaps="false"
                            android:textSize="13sp"
                            android:paddingHorizontal="18dp"
                            app:cornerRadius="20dp"
                            android:backgroundTint="#5C8A3C"
                            android:textColor="#FFFFFF"
                            app:icon="@android:drawable/ic_input_add"
                            app:iconTint="#FFFFFF"
                            app:iconSize="18dp"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDeletePromo"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Hapus"
                            android:textAllCaps="false"
                            android:textSize="13sp"
                            android:paddingHorizontal="18dp"
                            app:cornerRadius="20dp"
                            android:backgroundTint="#E53935"
                            android:textColor="#FFFFFF"
                            app:icon="@android:drawable/ic_delete"
                            app:iconTint="#FFFFFF"
                            app:iconSize="18dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ðŸ“‚ PREMIUM KATEGORI SECTION -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_section_white"
                    android:paddingVertical="24dp"
                    android:paddingHorizontal="16dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_accent_bar"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kategori Produk"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua â€º"
                            android:textSize="13sp"
                            android:textColor="#5C8A3C"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:scrollbars="none"
                        android:clipToPadding="false"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </LinearLayout>

                <!-- ðŸ† PREMIUM PRODUK TERLARIS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_accent_bar"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Produk Terlaris"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pilihan terbaik dari kami"
                                android:textSize="12sp"
                                android:textColor="#888888"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/star_big_on"
                            app:tint="#FFD54F"
                            android:contentDescription="Best Seller" />
                    </LinearLayout>

                    <!-- Products Grid -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="8dp"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2" />
                </LinearLayout>

                <!-- ðŸ“ PREMIUM FOOTER - CENTERED TEXT -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginBottom="100dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="28dp"
                        android:gravity="center">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_person"
                            app:tint="#5C8A3C"
                            android:layout_marginBottom="16dp"
                            android:contentDescription="Store Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tentang Kami"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvAboutTagline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solusi Pertanian Modern Indonesia"
                            android:textSize="13sp"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:layout_marginBottom="20dp" />

                        <!-- âœ… Contact Info Cards - CENTERED -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_contact_info"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvAboutAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“ Jl. Pertanian Sejahtera No. 123"
                                android:textSize="13sp"
                                android:textColor="#444444"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:drawablePadding="8dp" />

                            <TextView
                                android:id="@+id/tvAboutPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“ž +62 812-3456-7890"
                                android:textSize="13sp"
                                android:textColor="#444444"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:drawablePadding="8dp" />

                            <TextView
                                android:id="@+id/tvAboutEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“§ support@agrishop.com"
                                android:textSize="13sp"
                                android:textColor="#444444"
                                android:gravity="center"
                                android:drawablePadding="8dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="60dp"
                            android:layout_height="3dp"
                            android:background="#5C8A3C"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Â© 2025 Niaga Tani. All rights reserved."
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:fontFamily="sans-serif-light" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- ðŸŽ¯ Premium FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="#FFFFFF"
        app:backgroundTint="#5C8A3C"
        app:elevation="16dp"
        app:pressedTranslationZ="20dp"
        app:fabSize="normal"
        android:visibility="gone" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>