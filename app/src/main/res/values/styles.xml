<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tab Text Style -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Card Title Style -->
    <style name="CardTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_green_premium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Section Header Style -->
    <style name="SectionHeaderStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Price Text Style -->
    <style name="PriceTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_green_premium</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <!-- Button Primary Style -->
    <style name="ButtonPrimaryStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="backgroundTint">@color/primary_green_premium</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Button Secondary Style -->
    <style name="ButtonSecondaryStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">@color/primary_green_premium</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary_green_premium</item>
    </style>

    <!-- Text Input Layout Style -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/background_light_gray</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/primary_green_premium</item>
        <item name="hintTextColor">@color/primary_green_premium</item>
        <item name="startIconTint">@color/primary_green_premium</item>
    </style>

    <!-- Card View Premium Style -->
    <style name="CardViewPremiumStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/border_light</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Empty State Text -->
    <style name="EmptyStateTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Status Badge Style -->
    <style name="StatusBadgeStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:background">@drawable/bg_status_active</item>
    </style>
    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
</resources>